{
  "name": "@dot-i/k8s-operator",
  "version": "2.0.0",
  "description": "Build Kubernetes operators in NodeJS (and TypeScript)",
  "author": {
    "name": "Nico Francois",
    "email": "nico.francois@dot-i.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dot-i/k8s-operator-node"
  },
  "files": [
    "dist/*.ts",
    "dist/*.js",
    "*.md"
  ],
  "license": "Apache-2.0",
  "main": "dist/operator.js",
  "types": "dist/operator.d.ts",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.22.3",
    "async": "^3.2.6",
    "gaxios": "^6.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/async": "^3.2.24",
    "@types/byline": "^4.2.36",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18",
    "@types/ws": "^8.5.13",
    "eslint": "^9.16.0",
    "mkdirp": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "scripts": {
    "lint": "eslint ./src",
    "clean": "rm -Rf node_modules/ dist/",
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "rm -Rf dist/ && npm run build"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "operator"
  ],
  "overrides": {
    "request": "npm:@cypress/request@^3.0.1"
  }
}
