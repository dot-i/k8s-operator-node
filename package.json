{
  "name": "@linode/apl-k8s-operator",
  "version": "1.3.9",
  "description": "Build Kubernetes operators in NodeJS (and TypeScript)",
  "repository": {
    "type": "git",
    "url": "https://github.com/linode/apl-k8s-operator-node"
  },
  "files": [
    "dist/*.ts",
    "dist/*.js",
    "*.md"
  ],
  "license": "Apache-2.0",
  "main": "dist/operator.js",
  "types": "dist/operator.d.ts",
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "async": "^3.2.5",
    "gaxios": "^5.1.3"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/byline": "^4.2.36",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "=12.12.6",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "mkdirp": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "lint": "eslint ./src --ext .ts,.tsx",
    "clean": "rm -Rf node_modules/ dist/",
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "rm -Rf dist/ && npm run build"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "operator"
  ],
  "overrides": {
    "request": "npm:@cypress/request@^3.0.1"
  }
}
